{
  "name": "Spideybot Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [5000],
  "portsAttributes": {
    "5000": {
      "label": "SpideyBot Web",
      "visibility": "public",
      "onAutoForward": "openBrowser"
    }
  },
  "postCreateCommand": "npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
